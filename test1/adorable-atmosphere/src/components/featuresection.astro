---
let dt
try {
  const req = await fetch('http://10.10.100.54:4004/api/features')
  dt = await req.json()

  console.log(dt.docs);
  
} catch (err) {
  console.log(err)
}
---

<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-2">
    { dt.docs.map(record=>
    <>
      <a class="group flex flex-col  hover:bg-gray-50 rounded-xl p-4 md:p-7 dark:hover:bg-neutral-800 border" href="#">
        <div class="flex justify-center items-center size-12 bg-blue-600 rounded-xl">
          <img src="/bg.jpg" alt="" srcset="">
        </div>
        <div class="mt-5">
          <h2 class="group-hover:text-gray-600 text-lg font-semibold text-gray-800 dark:text-white dark:group-hover:text-gray-400">{record.name}</h2>
          <p class="mt-1 text-gray-600 dark:text-neutral-400">{record.description}</p>          
        </div>
      </a>
    </>
    )}
  </div>
</div>

